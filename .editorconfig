# https://editorconfig.org/
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = LF

[*.ts]
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
insert_final_newline = true
indent_size = unset
trim_trailing_whitespace = false

[*.{bat,cmd,ps1}]
end_of_line = crlf

# Compiled JavaScript files should not be edited directly, so we unset the indent_size for them.
[*.{js,txt}]
indent_size = unset